<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    package="com.example.crinaed"
    android:name=".DetailsProgressBarFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.crinaed.view.NestedScrollableHost
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <com.example.crinaed.ProgressBar.SliderProgressBar
                android:id="@+id/progressBarSlider"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardSlider"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderIndicatorAnimationDuration="600"
                appliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderScrollTimeInSec="1">
            </com.example.crinaed.ProgressBar.SliderProgressBar>
        </com.example.crinaed.view.NestedScrollableHost>:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:s

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        package="com.example.crinaed"
        android:name=".DetailsProgressBarFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardSlider">

        <Button
            package="com.example.crinaed"
            android:id="@+id/addNewItem"
            android:name=".DetailsProgressBarFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add An Item" />

        <Button
            package="com.example.crinaed"
            android:id="@+id/removeLastItem"
            android:name=".DetailsProgressBarFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Last Item" />

        <Button
            package="com.example.crinaed"
            android:id="@+id/renewItems"
            android:name=".DetailsProgressBarFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renew Items" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>