<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.db.williamchart.view.LineChartView
            android:id="@+id/lineChart_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/cardview_dark_background"
            app:chart_axis="x"
            app:chart_labelsColor="@color/redSecondary"
            app:chart_labelsSize="10sp"
            app:chart_lineColor="@color/redPrimary"
            app:chart_lineThickness="3dp"
            app:chart_smoothLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.db.williamchart.view.LineChartView
            android:id="@+id/lineChart_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="1dp"
            android:background="@color/cardview_dark_background"
            app:chart_axis="xy"
            app:chart_labelsColor="@color/greenSecondary"
            app:chart_labelsSize="10sp"
            app:chart_lineColor="@color/greenPrimary"
            app:chart_lineThickness="3dp"
            app:chart_smoothLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineChart_sport" />

        <com.db.williamchart.view.LineChartView
            android:id="@+id/lineChart_mental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cardview_dark_background"
            app:chart_axis="x"
            app:chart_labelsColor="@color/bluSecondary"
            app:chart_labelsSize="10sp"
            app:chart_lineColor="@color/bluPrimary"
            app:chart_lineThickness="3dp"
            app:chart_smoothLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineChart_social" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>