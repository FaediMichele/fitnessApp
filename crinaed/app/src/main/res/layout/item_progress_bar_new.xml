<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h1"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="Create objective"
        android:textColor="@color/bluPrimary"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.example.crinaed.view.ProgressBarView
        android:id="@+id/progressBarItem"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:angle="270"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        app:backgroundColor="@color/redPrimary"
        app:backgroundStrokeWidth="1dp"
        app:foregroundColor="@color/redSecondary"
        app:progress="10"
        app:startAngle="270"
        app:strokeWidth="7dp"
        app:percentageTextSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/description_objective"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>


    <TextView
        android:id="@+id/description_objective"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="testp proa vediamose  va  a campo sto scrivendo come un cristian che non ha piu la testa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBarItem" />

</androidx.constraintlayout.widget.ConstraintLayout>