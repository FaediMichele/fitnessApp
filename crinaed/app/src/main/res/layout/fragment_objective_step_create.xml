<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curve_shap">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create step"
        android:textColor="@color/orange"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="start|center"
        android:text="Name"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/name_step"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />
    <EditText
        android:id="@+id/name_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />



    <!-- type -->
    <TextView
        android:id="@+id/text_type"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="start|center"
        android:layout_marginStart="10dp"
        android:text="Type"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/name_step"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"

        />
    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end|center"
        app:layout_constraintTop_toTopOf="@id/text_type"
        app:layout_constraintBottom_toBottomOf="@id/text_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"/>

    <!-- unitMeasure, max -->
    <TextView
        android:id="@+id/text_mission"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="start|center"
        android:text="Mission"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/result"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/result"/>

    <EditText
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Desired result"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/spinner_type"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.75"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title" />
    <Spinner
        android:id="@+id/spinner_unit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end|center"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/result"
        app:layout_constraintBottom_toBottomOf="@id/result"/>

    <!-- Repetition -->
    <TextView
        android:id="@+id/text_repeat"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Repeat"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_mission"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:gravity="start|center"/>

    <Spinner
        android:id="@+id/spinner_repeat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end|center"
        app:layout_constraintTop_toTopOf="@id/text_repeat"
        app:layout_constraintBottom_toBottomOf="@id/text_repeat"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Category -->
    <TextView
        android:id="@+id/text_cat"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Category"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:gravity="start|center"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/text_repeat"/>

    <Spinner
        android:id="@+id/spinner_cat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end|center"
        app:layout_constraintTop_toTopOf="@id/text_cat"
        app:layout_constraintBottom_toBottomOf="@id/text_cat"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- end -->

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>