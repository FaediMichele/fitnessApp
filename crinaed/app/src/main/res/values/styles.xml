<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="materialCardViewStyle">@style/MyCard</item>
<!--        <item name="colorAccent">#ff8800</item>-->
        <item name="colorPrimary">#ff8800</item>
        <item name="colorPrimaryVariant">#ffb944</item>
<!--        color status bar-->
        <item name="colorPrimaryDark">#ff8800</item>
<!--        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>-->
        <item name="colorOnPrimary">#000</item>
        <item name="colorSecondary">#ff470d</item>
        <item name="colorSecondaryVariant">#c30000</item>
        <item name="colorOnSecondary">#fff</item>

<!--        <item name="android:windowBackground">@null</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="MyCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundItem</item>
        <item name="cardElevation">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

</resources>
